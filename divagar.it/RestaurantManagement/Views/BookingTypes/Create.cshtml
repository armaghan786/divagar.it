@model RestaurantManagement.Models.BookingType

@{
    ViewData["Title"] = "Create";

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";


}

<h4>Add Booking Type</h4>
<div class="card">
    <div class="card-body py-4">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Booking Type</label>
                        <input asp-for="BookingTypee" class="form-control" />
                        <span asp-validation-for="BookingTypee" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">No Of Tables</label>
                        <input asp-for="NoOfTables" class="form-control" />
                        <span asp-validation-for="NoOfTables" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">No Of Seats</label>
                        <input asp-for="NoOfSeats" class="form-control" />
                        <span asp-validation-for="NoOfSeats" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-1">
                        <input type="submit" value="Create" class="btn btn-dark" />
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

