@model IEnumerable<WineCategory>
@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Divagar - Carta Vini</title>
    <link rel="icon" type="image/x-icon" href="~/image/favicon.ico">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Amiko:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Amiko:wght@400;600;700&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            
            background-color: #FDFBF7;
            color: #343a40;
            margin: 0;
            padding: 20px;
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            text-align: left;
        }

        #HeaderImage {
            padding: 20px 10px 0;
            opacity: 1;
            text-align: center;
            box-shadow: none;
        }

        #menu-container {
            margin: 0 auto;
            border-radius: 10px;
        }

        .menu {
            margin-bottom: 20px;
        }

        .category {
            margin-bottom: 50px;
            background-color: #202020;
            border: 1px solid #3d3d3d;
            border-radius: 4px;
            color: #fafafa;
            padding: 30px 0;
           
        }

            .category h3 {
                font-family: "Amiko";
                font-size: 1.5em;
                font-weight: 900;
                letter-spacing: 2px;
                text-align: center;
                padding-top: 5px;
                padding-bottom: 30px;
                margin: 15px 0;
                text-transform: uppercase;
                color: #fafafa;
/*                 background-image: url(https://storage.googleapis.com/msgsndr/5vlvY9vHOsgHMYNfAVQ5/media/66869b89121c747eac04363e.png);
 */                background-repeat: no-repeat;
                background-size: 300px;
                background-position: center;
                   background-color: #202020;
                background-position-y: bottom;
            }

            .category ul {
                margin: 0;
                padding: 0 30px;
                list-style-type: none;
            }

            .category li {
                font-family: "montserrat";
                font-size: 1.1em;
                padding: 20px 0;
                border-bottom: 1px solid #3d3d3d ;
            }

                .category li:last-child {
                    border-bottom: none;
                }

        .sub-category h4 {
            padding: 15px;
            font-family: 'Montserrat';
            font-size: 1rem !important;
            margin-bottom: 0;
        }

        .category .item-name {
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #fafafa;
        }

        .category .item-details {
            display: flex;
            align-items: center;
        }

            .category .item-details span.name {
                margin-right: 10px;
                max-width: 70%;
            }

        .category .item-name > span {
            width: 200px;
            text-align: end;
        }

        .category .subtext {
            display: block;
            font-style: italic;
            font-size: 0.9em;
            color: #8f9ba5;
            margin-top: 5px;
            background-color:#3d3d3d;
        }

        .unavailable .item-name span.name {
            text-decoration: line-through;
            color: gray;
        }

        .unavailable .item-name span.esaurito {
            color: gray;
            margin-left: 5px;
            font-size: 0.9em;
        }

        .sub-category-toggle {
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #3d3d3d ;
        }

            .sub-category-toggle .arrow {
                width: 0;
                height: 0;
                border-style: solid;
                margin-right: 10px;
            }

        .arrow-down {
            border-width: 5px 5px 0 5px;
            border-color: #666 transparent transparent transparent;
            transform: rotate(0deg);
        }

        .arrow-up {
            border-width: 0 5px 5px 5px;
            border-color: transparent transparent #666 transparent;
            transform: rotate(180deg);
        }

        .item {
            display: none;
        }

        .sub-category.show .item {
            display: block;
        }

        #footer {
            font-size: 12px;
            font-weight: 400;
                        color: #fafafa;

        }

        #footera {
            color: #188bf6;
            text-decoration: none;
        }

        #footerSetting {
            font-family: 'Amiko';
            background-color: #00000000;
            color: #000000;
            box-shadow: none;
            padding: 20px 0 0;
            opacity: 1;
            text-shadow: none;
            line-height: 1.3em;
            letter-spacing: 0;
            text-align: center;
        }

        .c-sub-heading {
            word-break: break-word;
        }

        .c-wrapper {
            position: relative;
        }

        @@media screen and (max-width: 1000px) {
            .category .item-details {
                align-items: baseline;
                flex-direction: column;
            }
        }

        @@media screen and (max-width: 950px) {
            .category .item-name span {
                max-width: 500px;
            }
        }

        @@media screen and (max-width: 750px) {
            .category {
                margin-bottom: 35px;
            }

                .category .item-name span {
                    max-width: 330px;
                }
        }

        @@media screen and (max-width: 550px) {
            .category .item-name span {
                max-width: 250px;
            }
        }

        @@media screen and (max-width: 450px) {
            .category {
                padding-top: 0;
                margin: 5px 0 10px 0;
                background-size: 250px;
            }

                .category ul {
                    padding: 0 15px;
                }

                .category li {
                    font-size: 1rem;
                }

                .category h3 {
                    padding-top: 10px;
                    padding-bottom: 12px;
                    margin: 5px 0 10px 0;
                    background-size: 150px;
                }
        }

        @@media screen and (max-width: 400px) {
            .category .item-name span {
                max-width: 200px;
            }

            .category li {
                font-size: 0.9rem;
            }
        }

        @@media screen and (max-width: 365px) {
            .category .item-name span {
                max-width: 170px;
            }

            .category h3 {
                padding-top: 15px;
                margin: 0;
                font-size: 1.2rem;
            }
        }
       /*  .subca{
            background-color:#3d3d3d !important;
             border-color: #3d3d3d !important;
        } */
          .subtext {
            color: #898989 !important
            }
    </style>
</head>
<body style="background-color:#202020">
    <div class="container" >
        <div class="row mb-3">
            <div class="col-12" id="HeaderImage">
                <img src="https://assets.cdn.filesafe.space/WEQWiGHFq6TIEnTDSamE/media/671fb85cea801825d0aacc72.png"  width="150" height="105" style="background-color:#202020;color: #fafafa" />
           </div>
        </div>

        <div id="menu-container">
            <div id="wine-menu" class="menu">
                @foreach (var category in Model)
                {
                    // Check if the category has any subcategory with at least one available item
                    var hasAvailableItems = category.WineSubcategories.Any(sub => sub.WineItems.Any(item => item.IsAvailable));

                    if (hasAvailableItems)
                    {
                        <div class="category">
                            <h3>@category.CategoryName</h3>

                            @foreach (var subcate in category.WineSubcategories.OrderBy(x=>x.OrderBy))
                            {
                                // Check if the subcategory has any available items
                                var hasAvailableSubItems = subcate.WineItems.Any(item => item.IsAvailable);

                                if (hasAvailableSubItems)
                                {
                                    <div class="sub-category subca">
                                        <div class="sub-category-toggle">
                                            <h4>@subcate.SubcategoryName</h4>
                                            <div class="arrow arrow-down"></div>
                                        </div>

                                        <ul>
                                            @foreach (var item in subcate.WineItems.OrderBy(x => x.OrderBy))
                                            {
                                                if (item.IsAvailable)
                                                {
                                                    <li class="item">
                                                        <div class="item-name">
                                                            <div class="item-details">
                                                                <span class="name">@item.ItemName</span>
                                                            </div>
                                                            <span>@item.ItemPrice</span>
                                                        </div>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="item">
                                                        <div class="item-name">
                                                            <div class="item-details">
                                                                <del><span class="name">@item.ItemName</span></del>
                                                            </div>
                                                            <del><span>@item.ItemPrice</span></del>
                                                        </div>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                }
                            }
                        </div>
                    }
                }
            </div>
        </div>

        <div id="menu-container">
            <div id="food-menu" class="menu">
            </div>
            <div class="row">

                <divc class="col-12" class="c-sub-heading c-wrapper">
                    <div id="footerSetting">
                        <h2 id="footer"><i class="fa fa-power-off"></i> Powered By <a id="footera" target="_self" href="https://mytablesuite.it/">TableSuite</a></h2>
                    </div>
                </divc>
            </div>
        </div>
        </div>
</body>
</html>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/js/all.min.js"></script>

<script>
    document.querySelectorAll('.sub-category-toggle').forEach(toggle => {
        toggle.addEventListener('click', () => {
            const subCategory = toggle.parentElement;
            subCategory.classList.toggle('show');
            const arrow = toggle.querySelector('.arrow');
            arrow.classList.toggle('arrow-up');
            arrow.classList.toggle('arrow-down');
        });
    });
</script>